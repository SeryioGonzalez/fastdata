{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hdiClusterNameSuffix": {
            "type": "string",
            "defaultValue": "hdisiyito"
        },
        "hdiClusterVersion": {
            "type": "string",
            "defaultValue": "3.6"
        },
		"hdiClusterApiVersion":  {
			"type": "string",
			"defaultValue": "2015-03-01-preview"
		},
        "headNodeSize": {
            "type": "string",
            "defaultValue": "Standard_D4_v2"
        },
        "workerNodeSize": {
            "type": "string",
            "defaultValue": "Standard_D3_v2"
        },
        "zookeeperNodeSize": {
            "type": "string",
            "defaultValue": "Standard_D3_v2"
        },
        "kafkaClusterSize": {
            "type": "int",
            "defaultValue": 3
        },
        "sparkClusterSize": {
            "type": "int",
            "defaultValue": 3
        },
        "disksPerWorkerNode": {
            "type": "int",
            "defaultValue": 8
        },
        "hdiClusterLoginUserName": {
            "type": "string",
            "defaultValue": "admin"
        },
        "hdiClusterLoginPassword": {
            "type": "securestring"
        },
        "hdiClusterSshUserName": {
            "type": "string",
            "defaultValue": "sergio"
        },
        "hdiClusterSshPassword": {
            "type": "securestring"
        },
        "sparkVersion": {
            "type": "string",
            "defaultValue": "2.1"
        },
        "subnetName": {
            "type": "string"
        },	
        "vnetId": {
            "type": "string"
        },
        "storageApiVersion":  {
			"type": "string",
			"defaultValue": "2015-06-15"
		},

		"storageType":  {
			"type": "string",
			"defaultValue": "Standard_LRS"
		}

    },
    "variables": {

        "storageAccountName": "[concat(parameters('hdiClusterNameSuffix'), uniqueString(resourceGroup().id))]",
        "kafkaClusterName":   "[concat('kafka1-', parameters('hdiClusterNameSuffix'))]",
        "sparkClusterName":   "[concat('spark2-', parameters('hdiClusterNameSuffix'))]"
    },
    "resources": [
        {
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "tags": {
                "displayName": "[variables('storageAccountName')]"
            },
            "properties": {
                "accountType": "[parameters('storageType')]"
            }
        },
        {
            "name": "[variables('kafkaClusterName')]",
            "type": "Microsoft.HDInsight/clusters",
            "location": "[resourceGroup().location]",
            "apiVersion": "[parameters('hdiClusterApiVersion')]",
            "properties": {
                "clusterVersion": "[parameters('hdiClusterVersion')]",
                "osType": "Linux",
                "clusterDefinition": {
                    "kind": "kafka",
                    "configurations": {
                        "gateway": {
                            "restAuthCredential.isEnabled": true,
                            "restAuthCredential.username": "[parameters('hdiClusterLoginUserName')]",
                            "restAuthCredential.password": "[parameters('hdiClusterLoginPassword')]"
                        }
                    }
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "name": "[concat(variables('storageAccountName'),'.blob.core.windows.net')]",
                            "isDefault": true,
                            "container": "[variables('kafkaClusterName')]",
                            "key": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), parameters('storageApiVersion')).key1]"
                        }
                    ]
                },
                "computeProfile": {
                    "roles": [
                        {
                            "name": "headnode",
                            "targetInstanceCount": "2",
                            "hardwareProfile": {
                                "vmSize": "[parameters('headNodeSize')]"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('hdiClusterSshUserName')]",
                                    "password": "[parameters('hdiClusterSshPassword')]"
                                }
                            },
                            "virtualNetworkProfile": {
                                "id": "[parameters('vnetId')]",
                                "subnet": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        },
                        {
                            "name": "workernode",
                            "targetInstanceCount": "[parameters('kafkaClusterSize')]",
                            "hardwareProfile": {
                                "vmSize": "[parameters('workerNodeSize')]"
                            },
                            "dataDisksGroups": [
                                { 
                                    "disksPerNode":  "[parameters('disksPerWorkerNode')]"
                                }
                            ],
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('hdiClusterSshUserName')]",
                                    "password": "[parameters('hdiClusterSshPassword')]"
                                }
                            },
                            "virtualNetworkProfile": {
                                "id": "[parameters('vnetId')]",
                                "subnet": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        },
                        {
                            "name": "zookeepernode",
                            "targetInstanceCount": 3,
                            "hardwareProfile": {
                                "vmSize": "[parameters('zookeeperNodeSize')]"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('hdiClusterSshUserName')]",
                                    "password": "[parameters('hdiClusterSshPassword')]"
                                }
                            },
                            "virtualNetworkProfile": {
                                "id": "[parameters('vnetId')]",
                                "subnet": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "[variables('storageAccountName')]"
            ]
        },
        {
            "name": "[variables('sparkClusterName')]",
            "type": "Microsoft.HDInsight/clusters",
            "location": "[resourceGroup().location]",
            "apiVersion": "[parameters('hdiClusterApiVersion')]",
            "properties": {
                "clusterVersion": "[parameters('hdiClusterVersion')]",
                "osType": "Linux",
                "clusterDefinition": {
                    "kind": "spark",
                    "componentVersion": {
                        "Spark": "[parameters('sparkVersion')]"
                    },
                    "configurations": {
                        "gateway": {
                            "restAuthCredential.isEnabled": true,
                            "restAuthCredential.username": "[parameters('hdiClusterLoginUserName')]",
                            "restAuthCredential.password": "[parameters('hdiClusterLoginPassword')]"
                        }
                    }
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "name": "[concat(variables('storageAccountName'),'.blob.core.windows.net')]",
                            "isDefault": true,
                            "container": "[variables('sparkClusterName')]",
                            "key": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), parameters('storageApiVersion')).key1]"
                        }
                    ]
                },
                "computeProfile": {
                    "roles": [
                        {
                            "name": "headnode",
                            "targetInstanceCount": "2",
                            "hardwareProfile": {
                                "vmSize": "[parameters('headNodeSize')]"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('hdiClusterSshUserName')]",
                                    "password": "[parameters('hdiClusterSshPassword')]"
                                }
                            },
                            "virtualNetworkProfile": {
                                "id": "[parameters('vnetId')]",
                                "subnet": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        },
                        {
                            "name": "workernode",
                            "targetInstanceCount": "[parameters('sparkClusterSize')]",
                            "hardwareProfile": {
                                "vmSize": "[parameters('workerNodeSize')]"
                            },
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('hdiClusterSshUserName')]",
                                    "password": "[parameters('hdiClusterSshPassword')]"
                                }
                            },
                            "virtualNetworkProfile": {
                                "id": "[parameters('vnetId')]",
                                "subnet": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "[variables('storageAccountName')]"
            ]
        }
    ]
}